{
  "manifest_version": 3,
  "name": "WikIMDb",
  "description": "Adds IMDb ratings next to movie links on Wikipedia pages.",
  "version": "0.1.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "*://*.wikipedia.org/*",
    "https://www.omdbapi.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "WikIMDb Settings"
  }
}
