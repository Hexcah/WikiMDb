{
  "manifest_version": 3,
  "name": "WikIMDb",
  "description": "Adds TMDb ratings next to movie, TV show, and people links on Wikipedia pages.",
  "version": "0.8.2",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "*://*.wikipedia.org/*",
    "https://api.themoviedb.org/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["blacklist.json"],
      "matches": ["*://*.wikipedia.org/*"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "WikIMDb Settings"
  }
}
